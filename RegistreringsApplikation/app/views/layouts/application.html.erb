<!DOCTYPE html>
<html>
<head>
  <title>RegistreringsApplikation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
      
      <% flash.each do |type, msg| %>
      <li><%= msg %></li>
    <% end %>
      
      
      <% if is_logged_in? %>
      <div class="alert alert-success" role = "alert">Logged in as <%= current_user.name %> </div>
      <%= link_to "Log out", logout_path %>
      <% end %>
      
      
      <%= yield %> 
      <%= debug(params) if Rails.env.development? %>
    </div>
  
  
</body>
</html>
